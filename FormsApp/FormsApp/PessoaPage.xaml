<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsApp.PessoaPage">
  <ContentPage.ToolbarItems>
    <ToolbarItem Name="Pronto" Clicked="ProntoAction" />
  </ContentPage.ToolbarItems>

  <StackLayout Orientation="Vertical" Padding="10">
    <StackLayout.Children>
      <Entry Placeholder="Id" Text="{Binding IdPessoa}">
      </Entry>

      <Entry Placeholder="Nome" Text="{Binding Nome}">
      </Entry>

      <Entry Placeholder="Telefone" Text="{Binding Telefone}">
      </Entry>



    </StackLayout.Children>
  </StackLayout>
</ContentPage>